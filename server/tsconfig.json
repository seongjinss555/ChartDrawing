{
  "compilerOptions": {
    "target": "ES2017", 
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", 
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts","src/**/*"],
  "exclude": ["node_modules"]
}
